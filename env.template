# System and Terminal Configuration
export LANG="en_US.UTF-8"
export TERM="xterm-256color"
export ZSH="$HOME/.oh-my-zsh"

# FZF Configuration
export FZF_BASE="/opt/homebrew/bin/fzf"
export FZF_PREVIEW_OPTS='--preview "bat --style=numbers --color=always --line-range :500 {}"'
export FZF_DEFAULT_COMMAND="fd --hidden --strip-cwd-prefix --follow --exclude .git"
export FZF_CTRL_T_COMMAND="$FZF_DEFAULT_COMMAND --type file"
export FZF_ALT_C_COMMAND="$FZF_DEFAULT_COMMAND --type directory"

# Compiler Configuration
# Update these paths based on your system
export LDFLAGS="-L/opt/homebrew/opt/llvm/lib"
export CPPFLAGS="-I/opt/homebrew/opt/llvm/include"

# Tool Configuration
export RIPGREP_CONFIG_PATH="${HOME}/.config/ripgrep/config"

# Git Configuration
# Replace with your SSH key path
export SSH_KEY_PATH="~/.ssh/YOUR_SSH_KEY"
export GIT_TERMINAL_PROMPT=1
export GIT_PAGER="delta"

# Editor Configuration
if [[ -n $SSH_CONNECTION ]]; then
  export EDITOR='vim'
else
  export VISUAL='nvim'
  export EDITOR='nvim'
fi

# XDG Configuration
export XDG_CONFIG_HOME="$HOME/.config"
export HOMEBREW_NO_ENV_HINTS=TRUE

